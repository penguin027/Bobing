/* pages/gift/gift.wxss */
page {
  height: 100%;
}
.bgImg {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.container {
  width: 100%;
  height: 1200rpx;
  margin: 0;
  padding: 0;
  position: relative;
}

image {
  position: absolute;
  width: 100%;
  height: 1200rpx;
}


.Goto {
  position: fixed;
  margin: 0 5%;
  bottom: 100rpx;
  left: 400rpx;
  display: flex;
  /* 如果把盒子设置为弹性盒子,必须要加的 */
  flex-direction: row;
  /* 设置一个大盒子内容垂直排列*/
  align-items: center;
  /* 设置一个大盒子内容居中排列*/
  justify-content: center;
  margin-top: 200rpx;
  color: var(--yellowColor);
  font-size: medium;
}